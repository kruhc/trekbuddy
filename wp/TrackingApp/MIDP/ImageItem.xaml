<UserControl x:Class="TrackingApp.ImageItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel x:Name="panel" HorizontalAlignment="Left" VerticalAlignment="Center">
        <TextBlock x:Name="label" FontWeight="Light" Text="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,5,10,0" FontSize="{StaticResource PhoneFontSizeMedium}"/>
        <Image x:Name="image" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,10,20"/>
        <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,10,20">
            <Button.Content>
                <Image x:Name="buttonimage" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>