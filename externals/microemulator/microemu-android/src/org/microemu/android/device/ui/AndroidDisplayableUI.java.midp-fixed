	public Vector<AndroidCommandUI> getCommandsUI() {
		return commands;
	}
	
	public CommandListener getCommandListener() {
		return commandListener;
	}
	
	//
	// DisplayableUI
	//

	public void addCommandUI(CommandUI cmd) {
		synchronized (this) {
			if (!commands.contains(cmd)) {
				commands.add((AndroidCommandUI) cmd);
			}
			// TODO decide whether this is the best way for keeping sorted commands
			Collections.sort(commands, commandsPriorityComparator);
		}
	}

	public void removeCommandUI(CommandUI cmd) {
		synchronized (this) {
			commands.remove(cmd);
		}
	}

	public void setCommandListener(CommandListener l) {
		this.commandListener = l;

		/* hack - displayable is ChoiceGroup of POPUP type */
		if (android.os.Build.VERSION.SDK_INT >= 21) {
//			if (l != null && l.getClass().getName().equals("javax.microedition.lcdui.ChoiceGroup$ImplicitListener")) {
			if (l instanceof javax.microedition.lcdui.ChoiceGroup.ImplicitListener) {
if (true) throw new IllegalStateException();
				titleView = (TextView) view.findViewById(net.trekbuddy.midlet.R.id.titleView);
				if (toolbarView != null) {
					toolbarView.setVisibility(View.GONE);
					toolbarView = null;
				}
			}
		}
	}

	public void invalidate() {
		activity.post(new Runnable() {
			public void run() {
				if (titleView != null) {
					titleView.setText(displayable.getTitle());
				} else if (toolbarView != null) {
//					((android.widget.Toolbar) toolbarView).setSubtitle(displayable.getTitle());
					org.microemu.android.AndroidRuntimeMethods.setSubtitle(toolbarView, displayable.getTitle());
				/*
				} else if (actionbarView != null) {
					((android.app.ActionBar) actionbarView).setSubtitle(displayable.getTitle());
				*/
				}
			}
		});
	}

	public void showNotify() {
		activity.post(new Runnable() {
			public void run() {
				activity.setContentView(view);
				if (android.os.Build.VERSION.SDK_INT >= 21) {
					if (toolbarView != null) {
//						activity.setActionBar((android.widget.Toolbar) toolbarView);
						org.microemu.android.AndroidRuntimeMethods.setActionBar(activity, toolbarView);
					}
				}
				if (android.os.Build.VERSION.SDK_INT >= 14) {
//					activity.invalidateOptionsMenu();
					org.microemu.android.AndroidRuntimeMethods.invalidateOptionsMenu(activity);
				}
				view.requestFocus();
//				view.invalidate();
			}
		});
	}

	public void hideNotify() {
		activity.post(new Runnable() {
			public void run() {
				view.clearFocus();
			}
		});
	}

}
