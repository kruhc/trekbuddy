<UserControl x:Class="TrackingApp.ChoiceGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel x:Name="panel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock x:Name="label" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,10,0" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontWeight="Light"/>
    </StackPanel>
</UserControl>